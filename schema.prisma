datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                      String     @id @default(cuid())
  name                    String     @default("")
  email                   String     @unique @default("")
  password                String?
  cart                    CartItem[] @relation("CartItem_user")
  orders                  Order[]    @relation("Order_user")
  passwordResetToken      String?
  passwordResetIssuedAt   DateTime?
  passwordResetRedeemedAt DateTime?
}

model Product {
  id               String           @id @default(cuid())
  slug             String           @unique @default("EMPTY")
  name             String           @default("")
  description      String           @default("")
  status           String?          @default("DRAFT")
  defaultVariantId String           @default("null")
  lowestPrice      Int              @default(-1)
  highestPrice     Int              @default(-1)
  variants         ProductVariant[] @relation("ProductVariant_product")
  type             String           @default("")
  style            String           @default("")
  company          String           @default("")
  image            ProductImage?    @relation("Product_image", fields: [imageId], references: [id])
  imageId          String?          @unique @map("image")
  category         Category?        @relation("Product_category", fields: [categoryId], references: [id])
  categoryId       String?          @map("category")
  meta             Json?            @default("{}")

  @@index([name])
  @@index([categoryId])
}

model ProductImage {
  id      String   @id @default(cuid())
  image   Json?
  alt     String   @default("")
  product Product? @relation("Product_image")
}

model ProductVariant {
  id                     String      @id @default(cuid())
  price                  Int
  color                  String      @default("")
  material               String      @default("")
  variant                String      @default("")
  size                   String      @default("")
  product                Product?    @relation("ProductVariant_product", fields: [productId], references: [id])
  productId              String?     @map("product")
  from_CartItem_variant  CartItem[]  @relation("CartItem_variant")
  from_OrderItem_variant OrderItem[] @relation("OrderItem_variant")

  @@index([productId])
}

model ProductSnapshot {
  id                      String      @id @default(cuid())
  price                   Int
  image                   String      @default("")
  name                    String      @default("")
  meta                    Json?       @default("{}")
  from_OrderItem_snapshot OrderItem[] @relation("OrderItem_snapshot")
}

model Category {
  id          String    @id @default(cuid())
  slug        String    @unique @default("EMPTY")
  name        String    @default("")
  description String    @default("")
  image       Json?
  products    Product[] @relation("Product_category")
}

model Banner {
  id       String @id @default(cuid())
  head     String @default("")
  title    String @default("")
  subtitle String @default("")
  href     String @default("")
  image    Json?
}

model CartItem {
  id        String          @id @default(cuid())
  quantity  Int             @default(1)
  variant   ProductVariant? @relation("CartItem_variant", fields: [variantId], references: [id])
  variantId String?         @map("variant")
  user      User?           @relation("CartItem_user", fields: [userId], references: [id])
  userId    String?         @map("user")

  @@index([variantId])
  @@index([userId])
}

model Coupon {
  id                    String   @id @default(cuid())
  code                  String   @unique @default("")
  description           String   @default("")
  discountType          String   @default("PERCENTAGE")
  discountValue         Float    @default(99.99)
  validFrom             DateTime @default(now())
  validUntil            DateTime @default(now())
  usageLimit            Int      @default(-1)
  minimumPurchaseAmount Int      @default(0)
  isActive              Boolean  @default(true)
}

model Order {
  id        String      @id @default(cuid())
  total     Int
  coupon    String      @default("")
  createdAt DateTime    @map("orderCreatedAt") @postgresql.Date
  items     OrderItem[] @relation("OrderItem_order")
  user      User?       @relation("Order_user", fields: [userId], references: [id])
  userId    String?     @map("user")
  charge    String      @default("")

  @@index([userId])
}

model OrderItem {
  id         String           @id @default(cuid())
  price      Int
  quantity   Int
  variant    ProductVariant?  @relation("OrderItem_variant", fields: [variantId], references: [id])
  variantId  String?          @map("variant")
  snapshot   ProductSnapshot? @relation("OrderItem_snapshot", fields: [snapshotId], references: [id])
  snapshotId String?          @map("snapshot")
  order      Order?           @relation("OrderItem_order", fields: [orderId], references: [id])
  orderId    String?          @map("order")

  @@index([variantId])
  @@index([snapshotId])
  @@index([orderId])
}
